import java.io.File;
import java.io.IOException;

public class HVSitemapBuilder {
	
	public static String path2 = "D:/programming/Hersenvulsel/git-repository/Hersenvulsel/";

	private static String[] categories = new String[]{	
														"wetenschap", "geschiedenis", "natuur", "mensen",
														"faitsdivers", "entertainment"
													};
	public static void buildAll(String path){
		for (String cat : categories) {
			deleteSitemap(cat, path);
			XMLSitemapWriter.generateSitemap(cat);
		}
	}
	
	private static void deleteSitemap(String category, String path){
		File oldSitemap = new File(path + category + "/sitemap.xml");
		oldSitemap.delete();
	}

	public static void main(String[] args) {
		File f = new File("../../");
		System.out.println(f.getAbsolutePath());
		try {
			String path = f.getCanonicalPath();
			HVSitemapBuilder.buildAll(path);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
