import java.io.File;
import java.io.FilenameFilter;
import java.util.Arrays;


public class XMLSitemapWriter {

	public static void generateSitemap(String category){
		for (String article : getArticleIDs(category)) {
			System.out.println(XMLDresser.url(article, category));
		}
	}
	
	private static String[] getArticleIDs(String category){
		File file = new File("./" + category);
		String[] directories = file.list(new FilenameFilter() {
		  @Override
		  public boolean accept(File current, String name) {
		    return new File(current, name).isDirectory();
		  }
		});
		
		System.out.println(Arrays.toString(directories));
		return directories;
	}
	
	public static void main(String[] args) {
		XMLSitemapWriter.generateSitemap("geschiedenis");
	}
}
