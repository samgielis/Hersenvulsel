import java.io.FileNotFoundException;
import java.io.PrintWriter;

public class XMLSitemapWriter {

	public static void generateSitemap(String category){
		
		String sitemap = XMLDresser.XMLVersion();
		
		String[] urlSet = XMLDresser.urlSet();
		sitemap += urlSet[0];
		
		for (String article : HVCategoryReader.getArticleIDs(category))
			if( !article.contains("#TEMPLATE"))
				sitemap += XMLDresser.url(article, category);
		
		sitemap += urlSet[1];
		
		System.out.println(sitemap);
		try {
			PrintWriter out = new PrintWriter("sitemap.xml");
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
}
